# Configurações do VersoZap Backend

# URLs
SENDER_URL=http://localhost:3000/enviar
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5000

# Banco de dados
DATABASE_URL=sqlite:///versozap.db

# Segurança
SECRET_KEY=seu-jwt-secret-key-aqui

# Google OAuth2
GOOGLE_CLIENT_ID=seu-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=seu-google-client-secret

# Facebook OAuth2
FACEBOOK_APP_ID=seu-facebook-app-id
FACEBOOK_APP_SECRET=seu-facebook-app-secret

# Configurações de produção (opcional)
FLASK_ENV=development
DEBUG=True