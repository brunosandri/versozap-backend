# VersoZap Production Environment Variables

# Database (PostgreSQL em produção)
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Flask Configuration
SECRET_KEY=your-super-secret-production-key-here
FLASK_ENV=production

# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# WhatsApp Sender Service
SENDER_URL=https://your-whatsapp-sender-service.railway.app

# CORS Origins (adicione seus domínios de produção)
CORS_ORIGINS=https://app.versozap.com.br,https://versozap.vercel.app

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_EXPIRATION_HOURS=168

# Logging
LOG_LEVEL=INFO

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60